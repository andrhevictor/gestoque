<h1>Listing Inputs</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Status</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for input <- @inputs do %>
    <tr>
      <td><%= input.date %></td>
      <td><%= input.status %></td>

      <td>
        <span><%= link "Show", to: Routes.input_path(@conn, :show, input) %></span>
        <span><%= link "Edit", to: Routes.input_path(@conn, :edit, input) %></span>
        <span><%= link "Delete", to: Routes.input_path(@conn, :delete, input), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Input", to: Routes.input_path(@conn, :new) %></span>
