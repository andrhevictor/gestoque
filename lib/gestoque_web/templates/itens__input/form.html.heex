<.form let={f} for={@changeset} action={@action}>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

 <%= label f, :input_id %>
  <%= text_input f, :input_id %>
  <%= error_tag f, :input_id %>

  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= label f, :qtd %>
  <%= number_input f, :qtd %>
  <%= error_tag f, :qtd %>

  <div>
    <%= submit "Save" %>
  </div>
</.form>
